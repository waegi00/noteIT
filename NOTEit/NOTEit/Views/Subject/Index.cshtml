@model IEnumerable<NOTEit.Models.Subject>

@{
    ViewBag.Title = "Fachliste";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Neues Fach erstellen", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Semesters)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @foreach (var semester in item.Semesters)
                {
                    @Html.ActionLink(semester.Name, "Edit", "Semester", new { id = semester.Id }, null)
                    if (semester != item.Semesters.Last())
                    {
                        @Html.DisplayName(", ")
                    }
                }
            </td>
            <td>
                @Html.ActionLink("Bearbeiten", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Löschen", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>